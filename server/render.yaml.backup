services:
  # Backend
  - type: web
    name: quickshow-backend
    env: node
    region: oregon
    plan: free
    buildCommand: |
      cd server && 
      npm ci --omit=dev --ignore-scripts &&
      npm install --save-dev @nestjs/cli &&
      npm run build &&
      npm prune --production
    startCommand: cd server && node --max-old-space-size=460 dist/main
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 3000
      - key: MONGODB_URI
        sync: false
      - key: CLERK_PUBLISHABLE_KEY
        sync: false
      - key: CLERK_SECRET_KEY
        sync: false
      - key: INNGEST_EVENT_KEY
        sync: false
      - key: INNGEST_SIGNING_KEY
        sync: false
      - key: FRONTEND_URL
        sync: false
      - key: TMDB_API_KEY
        sync: false
      - key: STRIPE_PUBLISHABLE_KEY
        sync: false
      - key: STRIPE_SECRET_KEY
        sync: false